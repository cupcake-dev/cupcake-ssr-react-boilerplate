{
  "compilerOptions": {            
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,  
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "exclude": ["dist"],
  "include": ["src"]
}
